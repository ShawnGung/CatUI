.button
    display inline-block
    zoom 1
    line-height normal
    white-space nowrap
    text-align center
    vertical-align middle
    cursor pointer
    outline none
    font-family font-default
    font-size 100%
    text-decoration none
    
.button:hover
    color #fff
    text-decoration none;
    

.button:hover
.button:focus
    background #399dd8
        
.button:active
    box-shadow inset 0 1px 4px rgba(0,0,0,0.2)