.nav
    width 100%
    ul,
    li
        position relative
        display inline-block
    ul
        display flex
        align-items center
        justify-content space-around
        width 100%
        list-style none
        margin-left auto
        margin-right auto
        margin-top 0
        margin-bottom 0
        padding-left 0
        background-color nav-blue
    li
        font-size 1.8rem
        color cat-white
        font-weight lighter
    a
        text-decoration none
        white-space nowrap
        font-size 1.8rem
        color cat-white
        font-weight lighter
.fix
    fixed top left